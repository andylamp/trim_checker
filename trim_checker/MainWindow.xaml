<Window x:Class="trim_checker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:trim_checker"
        mc:Ignorable="d"
        Title="Trim Checker" Height="350" Width="525" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="button_check" Content="Check Trim status" HorizontalAlignment="Left" Click="Button_check_OnClick" Margin="41,15,0,0" VerticalAlignment="Top" Width="172" Height="70"/>
        <Button x:Name="button_enable" Content="Enable Trim" HorizontalAlignment="Left" Click="Button_enable_OnClick" Margin="41,120,0,0" VerticalAlignment="Top" Width="172" Height="70"/>
        <Button x:Name="button_disable" Content="Disable Trim" HorizontalAlignment="Left" Click="Button_disable_OnClick" Margin="41,222,0,0" VerticalAlignment="Top" Width="172" Height="70"/>
        <Image x:Name="result_image" HorizontalAlignment="Left" Height="146" Margin="314,71,0,0" VerticalAlignment="Top" Width="165"/>
        <Label x:Name="result_text" Content="" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="280,222,0,0" VerticalAlignment="Top" Width="220"/>

    </Grid>
</Window>
